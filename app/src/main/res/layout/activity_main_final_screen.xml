<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.familygames.trivialwedding.MainFinalScreen">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#000000" />

        <TextView
            android:id="@+id/titleTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TRIVIAL WEDDING"
            android:textSize="24sp"
            android:textColor="#FFFFFF"
            android:layout_marginTop="16dp"
            android:layout_centerHorizontal="true" />

        <TextView
            android:id="@+id/descriptionTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="FELICIDADES!!! LO HABÉIS CONSEGUIDO!!! TENÉIS QUE IR A CALLE BLAS BERNI Nº10, 2CTRO Y RECITAR EL SIGUIENTE CODIGO. SI EL GUARDA DETERMINA QUE EL CODIGO ES CORRECTO, OBTENDREIS VUESTRA RECOMPENSA :) "
            android:layout_below="@id/titleTextView"
            android:textSize="18sp"
            android:textColor="#FFFFFF"
            android:textAlignment="center"
            android:layout_marginTop="80dp"
            android:layout_centerHorizontal="true" />

         <TextView
             android:id="@+id/codigoTextView"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:layout_below="@id/descriptionTextView"
             android:text="Codigo: Que todas las noches sean noches de boda, que todas las lunas sean de miel"
             android:textAlignment="center"
             android:textSize="38sp"
             android:textColor="#FFFFFF"
             android:layout_marginTop="150dp"
             android:layout_centerHorizontal="true" />
    <!--
             -->

</RelativeLayout>
